<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/tenDip"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/twoDip"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/status_image"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_width="@dimen/fiftyDip"
            android:layout_height="@dimen/fiftyDip"
            android:layout_margin="@dimen/fiveDip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_toStartOf="@id/perform_action"
            android:layout_toEndOf="@id/status_image"
            android:background="@android:color/white"
            android:layout_marginEnd="@dimen/fiveDip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDip"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/white"
                android:layout_marginStart="@dimen/fiveDip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/job_name"
                    android:layout_weight="1"
                    style="@style/customTextView"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/forteenDip"
                    style="@style/customTextView"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:background="@color/white"
                style="@style/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fiveDip"
                android:layout_marginTop="@dimen/twoDip"
                android:gravity="fill_horizontal"
                android:maxLines="1"
                android:textSize="@dimen/forteenDip"
                android:text="@string/job_status" />

            <TextView
                android:background="@color/white"
                style="@style/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fiveDip"
                android:layout_marginTop="@dimen/twoDip"
                android:gravity="fill_horizontal"
                android:maxLines="1"
                android:textSize="@dimen/forteenDip"
                android:text="Status Date : 02/02/2020" />

            <LinearLayout
                android:background="@color/white"
                android:layout_marginStart="@dimen/fiveDip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Posted By : "
                    android:layout_weight="1"
                    style="@style/customTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/forteenDip"
                    style="@style/customTextView"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:text="XYZ" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/perform_action"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_cancel_black"
            android:layout_marginEnd="@dimen/fiveDip"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/fortyDip"
            android:layout_height="@dimen/fortyDip"
            android:contentDescription="TODO" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
