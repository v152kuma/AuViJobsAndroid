<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_full_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_centerInParent="true"
        android:contentDescription="TODO" />

    <ImageView
        android:visibility="gone"
        android:padding="@dimen/fiveDip"
        android:layout_margin="@dimen/twentyDip"
        android:background="@drawable/background_circle_line_thin"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/fiveDip"
        android:id="@+id/btn_download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_get_app" />
</RelativeLayout>
